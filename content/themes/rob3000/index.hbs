        <div class="site-head-content inner">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
            <div class="social">
                <a href="https://github.com/rob3000â€Ž" class="social-icon git-hub"></a>
                <a href="https://twitter.com/UnboundGamble" class="social-icon twitter"></a>
                <a href="http://www.linkedin.com/pub/robert-shepherd/38/22b/a84" class="social-icon linked-in"></a>
            </div>
        </div>
    </div>
</header>
